{
    "compilerOptions": {
        "module": "ES6",
        "target": "ES6",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}